<%- include("../partials/header.ejs") %>

<form class="form" action="/games" method="POST" enctype="multipart/form-data">
    <div class="center">
        <label for="name" class="align"> Game Name</label>
        <input
            type="text"
            name="name"
            id="name"
            class="validate"
            autocomplete="off"
            required
        />
    </div>
    <br />
    <div class="center wrap">
        <label for="image" class="align upload"> Image</label>
        <br />
        <br />
        <input
            class="inputImg"
            type="file"
            id="image"
            name="image"
            accept="image/*"
            required
        />
    </div>
    <br />
    <div class="center">
        <label for="link" class="align"> Game Link</label>
        <input
            type="text"
            name="link"
            id="link"
            class="validate"
            autocomplete="off"
        />
    </div>
    <br />
    <div class="center">
        <label for="codeLink" class="align"> Game Code Link</label>
        <input
            type="text"
            name="codeLink"
            id="codeLink"
            class="validate"
            autocomplete="off"
            required
        />
    </div>
    <br />
    <div class="center">
        <label for="description" class="align"> Game Description</label>
        <br />
        <br />
        <textarea
            type="text"
            name="description"
            id="description"
            class="validate"
            autocomplete="off"
        ></textarea>
    </div>
    <br />
    <div class="center">
        <input
            type="submit"
            value="Add Game"
            class="btn waves-effect waves-light"
        />
    </div>
</form>
<br />
<br />
<%- include("../partials/footer.ejs") %>
